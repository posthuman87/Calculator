<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/tvLCD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="36sp" />

    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <Button
            android:id="@+id/btnSeven"
            android:text="7"
            app:layout_heightPercent="16%"
            app:layout_marginStartPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnEight"
            android:layout_toRightOf="@id/btnSeven"
            android:text="8"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnNine"
            android:layout_toRightOf="@id/btnEight"
            android:text="9"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnPlus"
            android:layout_toRightOf="@id/btnNine"
            android:text="+"
            app:layout_heightPercent="16%"
            app:layout_marginEndPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnFour"
            android:layout_below="@+id/btnSeven"
            android:text="4"
            app:layout_heightPercent="16%"
            app:layout_marginStartPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnFive"
            android:layout_below="@+id/btnEight"
            android:layout_toRightOf="@+id/btnFour"
            android:text="5"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnSix"
            android:layout_below="@+id/btnNine"
            android:layout_toRightOf="@+id/btnFive"
            android:text="6"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnMinus"
            android:layout_below="@+id/btnPlus"
            android:layout_toRightOf="@+id/btnSix"
            android:text="-"
            app:layout_heightPercent="16%"
            app:layout_marginEndPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnOne"
            android:layout_below="@+id/btnFour"
            android:text="1"
            app:layout_heightPercent="16%"
            app:layout_marginStartPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnTwo"
            android:layout_below="@+id/btnFive"
            android:layout_toRightOf="@+id/btnOne"
            android:text="2"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnThree"
            android:layout_below="@+id/btnSix"
            android:layout_toRightOf="@+id/btnTwo"
            android:text="3"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnMulti"
            android:layout_below="@+id/btnMinus"
            android:layout_toRightOf="@+id/btnThree"
            android:text="*"
            app:layout_heightPercent="16%"
            app:layout_marginEndPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnZero"
            android:layout_below="@+id/btnOne"
            android:text="0"
            app:layout_heightPercent="16%"
            app:layout_marginStartPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnClear"
            android:layout_below="@+id/btnTwo"
            android:layout_toRightOf="@+id/btnZero"
            android:text="C"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnEqual"
            android:layout_below="@+id/btnThree"
            android:layout_toRightOf="@+id/btnClear"
            android:text="="
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
           />

        <Button
            android:id="@+id/btnDiv"
            android:layout_below="@+id/btnMulti"
            android:layout_toRightOf="@+id/btnEqual"
            android:text="/"
            app:layout_heightPercent="16%"
            app:layout_marginEndPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button

            android:id="@+id/btnPoint"
            android:layout_below="@+id/btnZero"
            android:text="."
            app:layout_heightPercent="16%"
            app:layout_marginStartPercent="5%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button

            android:id="@+id/btnSquare"
            android:layout_below="@+id/btnClear"
            android:layout_toRightOf="@+id/btnPoint"
            android:text="x*x"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnRadical"
            android:layout_below="@+id/btnEqual"
            android:layout_toRightOf="@+id/btnSquare"
            android:text="√"
            app:layout_heightPercent="16%"
            app:layout_widthPercent="22.5%"
            android:background="@drawable/but"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/btnBack"
            android:layout_below="@+id/btnDiv"
            android:layout_toRightOf="@+id/btnRadical"
            android:text="←"
            app:layout_heightPercent="16%"
            app:layout_marginEndPercent="5%"
            app:layout_widthPercent="22.5%"
            android:textSize="20sp"
            android:background="@drawable/but"
            />


    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

    </RelativeLayout>
</LinearLayout>